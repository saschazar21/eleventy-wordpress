{
  "compilerOptions": {
    "allowJs": false,
    "allowSyntheticDefaultImports": true,
    "alwaysStrict": true,
    "declaration": false,
    "esModuleInterop": true,
    "lib": ["DOM", "ES6"],
    "module": "CommonJS",
    "moduleResolution": "Node",
    "resolveJsonModule": true,
    "rootDir": ".",
    "target": "ES6"
  },
  "exclude": ["dist", "**/*.test.ts", "**/*.d.ts"],
  "include": ["**/*.ts"]
}
